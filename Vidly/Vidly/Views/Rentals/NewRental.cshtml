@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {

            var vm = {
                movieIds: []
            };
            $("#customer").typeahead("val", "");
            $("#movie").typeahead("val", "");
            $("#movies").empty();
            $.ajax({
                url: "/api/customers/",
                method: "GET",
                success: function (result) {
                    var customerList = [];
                    for (var i = 0; i < result.length; i++) {
                        var name = result[i].middleName != null ? result[i].firstName + ' ' + result[i].middleName + ' ' + result[i].lastName : result[i].firstName + ' ' + result[i].lastName;
                        customerList.push({
                            id: result[i].id,
                            name: name
                        })
                    };
                    getCustomers(customerList);
                }
            })



            function getCustomers(data) {


                var customers = new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    limit: 10,
                    local: data
                });

                $('#customer').typeahead({
                    minLength: 2,
                    highlight: true
                }, {
                        name: 'customers',
                        display: 'name',
                        source: customers
                    }
                ).on("typeahead:select", function (e, customer) {
                    vm.customerId = customer.id;

                    console.log(vm);
                });

            }



            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                limit: 10,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#movie').typeahead({
                minLength: 2,
                highlight: true
            }, {
                    name: 'movies',
                    display: 'name',
                    source: movies
                }
            ).on("typeahead:select", function (e, movie) {

                $("#movies").append("<li class='list-group-item'>" + movie.name + "</li>");

                if ($(".list-group").children().length > 1) {
                    $(".list-group-item").addClass("list-group-item-custom")
                }
                $("#movie").typeahead("val", "");
                vm.movieIds.push(movie.id);
                });

            $.validator.addMethod("validCustomer", function () {
                return vm.customerId && vm.customerId !== 0;
            }, "Please select a valid customer");


            $.validator.addMethod("atLeastOneMovie", function () {
                return vm.movieIds.length > 0;
            }, "Please select at least one movie");

            $("#rentalForm").submit(function (e) {
                e.preventDefault();
            })
            var validator=$("#rentalForm").validate({
                submitHandler: function () {
                    $.ajax({
                        url: "/api/newRentals",
                        method: "POST",
                        data: vm
                    }).done(function () {
                        toastr.success("Rentals Successfully Recorded");
                        $("#customer").typeahead("val", "");
                        $("#movie").typeahead("val", "");
                        $("#movies").empty();
                        vm = { movieIds: [] };
                        validator.resetForm();
                    }).fail(function () {
                        toastr.error("Something unexpected happened");
                        })

                    return false;


                }
            })

        })//close jquery
    </script>

}